@model IEnumerable<MvcTest.Models.ApplicationType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary"> Application Type List</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">Create New Application Type</a>
        </div>
    </div>
    <br/> <br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-active table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>Application Type Name</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                @foreach (var applicationType in Model)
                {
                    <tr>
                        <td width="50%">@applicationType.Name</td>
                        <td><button class="btn btn-primary">Edit</button></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-info"> No application type exists. </p>
    }
</div>
