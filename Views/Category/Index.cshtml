@model IEnumerable<MvcTest.Models.Category>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary"> Category List</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category</a>
        </div>
    </div>
    <br/> <br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-active table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td width="50%">@category.Name</td>
                    <td width="30%">@category.DisplayOrder</td>
                    <td>
                        <div class="btn-group w-75">
                            <a asp-controller="Category" asp-route-Id="@category.Id" asp-action="Edit" class="btn btn-warning">Edit</a>
                            <a asp-controller="Category" asp-route-Id="@category.Id" asp-action="Delete" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-info"> No category exists. </p>
    }
</div>